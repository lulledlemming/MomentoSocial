<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="100dp"
    android:layout_marginEnd="100dp"
    android:background="@drawable/border_curved">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage_search"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_user_avatar_light" />

        <TextView
            android:id="@+id/userName_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_below="@+id/userImage_search" />

        <TextView
            android:id="@+id/userFullName_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName_search"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Profile Name"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/watchButton_search"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userFullName_search"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button_light_curved"
            android:text="Watch"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>